<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Стиль для наименования элемента меню. -->
    <style name="MenuItemNameStyle">
        <item name="android:paddingStart">8dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Стиль для параметра "описание" элемента меню. -->
    <style name="MenuItemDescriptionStyle">
        <item name="android:paddingStart">8dp</item>
        <item name="android:textSize">18sp</item>

    </style>

    <!-- Стиль для ChipGroup. -->
    <style name="MenuChipGroupStyle">
        <item name="android:backgroundTint">?colorOnPrimary</item>
        <item name="android:background">?colorOnPrimary</item>
    </style>

    <!-- Стиль для чипов в фрагменте меню. -->
    <style name="MenuChipStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:textSize">20sp</item>
        <item name="chipSurfaceColor">@color/chipBackPassive</item>
        <item name="chipCornerRadius">4dp</item>
    </style>

    <!-- Стиль кнопки покупки/цены. -->
    <style name="ButtonBuyStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
    </style>
</resources>